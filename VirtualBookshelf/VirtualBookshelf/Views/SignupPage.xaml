<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualBookshelf.Views.SignupPage">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource mainstack}" VerticalOptions="Center">

            <Label 
                Text="Virtual Bookshelf"
                FontSize="30"
                HorizontalOptions="CenterAndExpand"
                Margin="0,0,0,20"
                TextColor="DarkCyan"/>


            <Entry 
                    x:Name="EntryUserEmail"
                    Placeholder="Email">
            </Entry>
            <Entry 
                    x:Name="EntryPassword"
                   Placeholder="Password" IsPassword="true">
            </Entry>
            <Entry 
                    x:Name="EntryConfirmPassword"
                   Placeholder="Confirm Password" IsPassword="true">
            </Entry>

            <Button x:Name="SignUpButton"
               
                    Text="Sign Up"
                    Clicked="SignUpButton_Clicked"
                    HeightRequest="54"
                    BackgroundColor="DodgerBlue"/>

           

        </StackLayout>
    </ContentPage.Content>
</ContentPage>